@model Verto.Models.Detail
@{
    ViewData["Title"] = "Update picture";
}

<h1>Detail</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="DetailPictureUpload" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="picture" class="control-label"></label>
                <input type="file" asp-for="picture" class="form-control"/>
            </div>

        </form>
    </div>
</div>